{
  "name": "business-process-flow-viewer",
  "version": "0.1.5",
  "description": "A modern PCF control that displays Business Process Flow stages in grid and subgrid views",
  "author": "Allan De Castro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/allandecastro/business-process-flow-viewer.git"
  },
  "keywords": [
    "pcf",
    "powerapps",
    "dynamics365",
    "dataverse",
    "bpf",
    "business-process-flow"
  ],
  "scripts": {
    "build": "pcf-scripts build",
    "clean": "pcf-scripts clean",
    "lint": "pcf-scripts lint",
    "lint:fix": "pcf-scripts lint fix",
    "rebuild": "pcf-scripts rebuild",
    "start": "pcf-scripts start",
    "start:watch": "pcf-scripts start watch",
    "refreshTypes": "pcf-scripts refreshTypes",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "solution:build": "dotnet build Solution/Solution.cdsproj -c Release",
    "solution:build:debug": "dotnet build Solution/Solution.cdsproj -c Debug",
    "solution:restore": "dotnet restore Solution/Solution.cdsproj",
    "version:bump": "node scripts/bump-version.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@fluentui/react-components": "9.46.2",
    "@fluentui/react-icons": "2.0.217",
    "react": "16.14.0",
    "react-dom": "16.14.0"
  },
  "devDependencies": {
    "@microsoft/eslint-plugin-power-apps": "^0.2.51",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^12.1.5",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^18.19.0",
    "@types/powerapps-component-framework": "^1.3.18",
    "@types/react": "16.14.0",
    "@types/react-dom": "16.9.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "axe-core": "^4.11.1",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "pcf-scripts": "^1",
    "pcf-start": "^1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  }
}
